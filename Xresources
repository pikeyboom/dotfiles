! urxvt config
URxvt.scrollBar: false
! This font info can be found from the command fc-list:
URxvt.font:     xft:Meslo LG M for Powerline:style=RegularForPowerline:size=12:antialias=true
URxvt.boldFont: xft:Meslo LG M for Powerline:style=RegularForPowerline:bold:size=12:antialias=true
! Remove border
URxvt.internalBorder: 0
URxvt.letterSpace: -1

! Configure Ctrl+Shift+C to copy selection to clipbard
URxvt.perl-ext-common:        default,xkr-clipboard
URxvt.iso14755:               false
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Control-Insert:  perl:clipboard:copy

